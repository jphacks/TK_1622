<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/FrameImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:background="@color/mt_red"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="10dp"
        android:paddingBottom="2dp">


        <ImageView
            android:id="@+id/GridImage"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="72dp"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/FrameLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:background="@color/mt_green"
        android:layout_below="@id/FrameImage"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/GridTitle"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/mt_white"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/GridSubTitle"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/mt_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/GridTitle" />
    </LinearLayout>
</RelativeLayout>

